@page "/company-dashboard/categories"
@using MiNegocio.Client.Shared.Services
@using MiNegocio.Shared.Dto.Response
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "SystemUser")]
@inject ICategoryManagementService CategoryService
@inject CustomAuthStateProvider AuthStateProvider

<h3>Gestión de Categorías</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="ShowCreateCategoryModal">Agregar Categoría</button>
</div>

@if (categories == null)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Cargando categorías...</p>
    </div>
}
else if (!categories.Any())
{
    <div class="alert alert-info">
        No hay categorías registradas. Agrega tu primera categoría para empezar.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Productos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in categories)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            <span class="badge @(category.IsActive ? "bg-success" : "bg-secondary")">
                                @(category.IsActive ? "Activa" : "Inactiva")
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-primary">@category.ProductCount</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => EditCategory(category)" title="Editar">
                                    <span class="oi oi-pencil"></span>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteCategory(category)" title="Eliminar"
                                        disabled="@(category.ProductCount > 0)">
                                    <span class="oi oi-trash"></span>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Create Category Modal -->
@if (showCreateCategoryModal)
{
    <div class="modal d-block show" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Agregar Nueva Categoría</h5>
                    <button type="button" class="btn-close" @onclick="HideCreateCategoryModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@newCategory" OnValidSubmit="@CreateCategory">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="mb-3">
                            <label for="category-name" class="form-label">Nombre:</label>
                            <InputText id="category-name" class="form-control" @bind-Value="newCategory.Name" />
                            <ValidationMessage For="@(() => newCategory.Name)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="category-description" class="form-label">Descripción:</label>
                            <TextArea id="category-description" class="form-control" @bind-Value="newCategory.Description" rows="3" />
                            <ValidationMessage For="@(() => newCategory.Description)" class="text-danger" />
                        </div>

                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Guardando...</span>
                            }
                            else
                            {
                                <span>Guardar</span>
                            }
                        </button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<!-- Edit Category Modal -->
@if (showEditCategoryModal && editingCategory != null)
{
    <div class="modal d-block show" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Categoría</h5>
                    <button type="button" class="btn-close" @onclick="HideEditCategoryModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@editCategoryRequest" OnValidSubmit="@UpdateCategory">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="mb-3">
                            <label for="edit-category-name" class="form-label">Nombre:</label>
                            <InputText id="edit-category-name" class="form-control" @bind-Value="editCategoryRequest.Name" />
                            <ValidationMessage For="@(() => editCategoryRequest.Name)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="edit-category-description" class="form-label">Descripción:</label>
                            <TextArea id="edit-category-description" class="form-control" @bind-Value="editCategoryRequest.Description" rows="3" />
                            <ValidationMessage For="@(() => editCategoryRequest.Description)" class="text-danger" />
                        </div>

                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Actualizando...</span>
                            }
                            else
                            {
                                <span>Actualizar</span>
                            }
                        </button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<CategoryDto> categories = new();
    private bool showCreateCategoryModal = false;
    private bool showEditCategoryModal = false;
    private bool isSubmitting = false;
    private CreateCategoryRequest newCategory = new();
    private CategoryDto? editingCategory;
    private CreateCategoryRequest editCategoryRequest = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        try
        {
            var companyId = await AuthStateProvider.GetCompanyIdAsync();
            if (companyId.HasValue)
            {
                categories = await CategoryService.GetCategoriesByCompanyAsync(companyId.Value);
            }
        }
        catch (Exception ex)
        {
            // Handle error
            Console.WriteLine($"Error loading categories: {ex.Message}");
        }
    }

    private void ShowCreateCategoryModal()
    {
        newCategory = new CreateCategoryRequest();
        showCreateCategoryModal = true;
    }

    private void HideCreateCategoryModal()
    {
        showCreateCategoryModal = false;
    }

    private async Task CreateCategory()
    {
        isSubmitting = true;
        try
        {
            var result = await CategoryService.CreateCategoryAsync(newCategory, 1); // TODO: Get company ID
            if (result != null)
            {
                showCreateCategoryModal = false;
                await LoadCategories();
            }
        }
        catch (Exception ex)
        {
            // Handle error
            Console.WriteLine($"Error creating category: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void EditCategory(CategoryDto category)
    {
        editingCategory = category;
        editCategoryRequest = new CreateCategoryRequest
        {
            Name = category.Name,
            Description = category.Description
        };
        showEditCategoryModal = true;
    }

    private void HideEditCategoryModal()
    {
        showEditCategoryModal = false;
    }

    private async Task UpdateCategory()
    {
        isSubmitting = true;
        try
        {
            if (editingCategory != null)
            {
                var result = await CategoryService.UpdateCategoryAsync(editingCategory.Id, editCategoryRequest);
                if (result != null)
                {
                    showEditCategoryModal = false;
                    await LoadCategories();
                }
            }
        }
        catch (Exception ex)
        {
            // Handle error
            Console.WriteLine($"Error updating category: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task DeleteCategory(CategoryDto category)
    {
        if (await js.InvokeAsync<bool>("confirm", $"¿Estás seguro de que deseas eliminar la categoría '{category.Name}'?"))
        {
            try
            {
                var success = await CategoryService.DeleteCategoryAsync(category.Id);
                if (success)
                {
                    await LoadCategories();
                }
                else
                {
                    await js.InvokeAsync<string>("alert", "No se puede eliminar la categoría porque tiene productos asociados.");
                }
            }
            catch (Exception ex)
            {
                // Handle error
                Console.WriteLine($"Error deleting category: {ex.Message}");
            }
        }
    }
}
