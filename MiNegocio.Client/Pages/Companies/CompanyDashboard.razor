@page "/company-dashboard"
@using MiNegocio.Client.Shared.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "SystemUser")]
@inject CustomAuthStateProvider AuthStateProvider

<h3>Panel de Empresa</h3>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Almacenes</h5>
                <p class="card-text">Gestiona los almacenes de tu empresa</p>
                <a href="/company-dashboard/warehouses" class="btn btn-primary">Gestionar Almacenes</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Categorías</h5>
                <p class="card-text">Organiza tus productos por categorías</p>
                <a href="/company-dashboard/categories" class="btn btn-primary">Gestionar Categorías</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Unidades de Medida</h5>
                <p class="card-text">Define las unidades de medida para tus productos</p>
                <a href="/company-dashboard/units-of-measure" class="btn btn-primary">Gestionar Unidades</a>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Resumen de la Empresa</h5>
        <div class="row">
            <div class="col-md-3">
                <div class="alert alert-info">
                    <h4>Total Almacenes</h4>
                    <p class="display-4">@totalWarehouses</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="alert alert-success">
                    <h4>Total Categorías</h4>
                    <p class="display-4">@totalCategories</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="alert alert-warning">
                    <h4>Total Unidades</h4>
                    <p class="display-4">@totalUnits</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="alert alert-primary">
                    <h4>Total Productos</h4>
                    <p class="display-4">@totalProducts</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int totalWarehouses = 0;
    private int totalCategories = 0;
    private int totalUnits = 0;
    private int totalProducts = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadCompanyData();
    }

    private async Task LoadCompanyData()
    {
        try
        {
            var companyId = await AuthStateProvider.GetCompanyIdAsync();
            if (companyId.HasValue)
            {
                // Aquí cargarías los datos reales de la empresa
                // Por ahora, usamos datos de ejemplo
                totalWarehouses = 3;
                totalCategories = 5;
                totalUnits = 8;
                totalProducts = 25;
            }
        }
        catch (Exception ex)
        {
            // Handle error
            Console.WriteLine($"Error loading company data: {ex.Message}");
        }
    }
}